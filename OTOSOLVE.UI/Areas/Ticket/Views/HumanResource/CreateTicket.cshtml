@model OTOSOLVE.UI.Areas.Environment.ViewModels.TicketVM

@section Styles {
	<link href="~/matrica/assets/libs/mobius1-selectr/selectr.min.css" rel="stylesheet" type="text/css">
	<link href="~/matrica/assets/libs/vanillajs-datepicker/css/datepicker.min.css" rel="stylesheet" type="text/css" />
	<link href="~/matrica/assets/libs/dropify/css/dropify.css" rel="stylesheet" type="text/css" />
}
<div class="row">
	<div class="col-12 col-lg-12">
		<div class="card" style="">
			<div class="card-header">
				<div class="row align-items-center">
					<div class="col">
						<h4 class="card-title">Ticket Creation</h4>
					</div><!--end col-->
					<div class="col-auto">
						<a asp-area="Ticket" asp-controller="HumanResource" asp-action="ViewTickets" class="btn btn-de-primary">
							<i class="mdi mdi-eye-outline me-2"></i>View Tickets
						</a>
					</div><!--end col-->
				</div> <!--end row-->

			</div><!--end card-header-->

			<div class="card-body">
				<div class="row">
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Requester Name</div>
						<div class="col-lg-4">
							<input type="text" class="form-control" id="requesterName" placeholder="Enter requester name">
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Assignee Name&Group</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Carol Davis - QA</option>
								<option value="1">David Martinez - UAT</option>
								<option value="1">Eve Thompson - Production</option>
								<option value="1">Frank Wilson - Support Infra</option>
								<option value="2">Grace Brown - Enquiries</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Followers</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="selectr-container selectr-desktop multiple" style="width: 100%;">
									<div class="selectr-options-container">
										<div class="selectr-input-container">
											<input class="selectr-input" tagindex="-1" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="true" role="textbox" type="search">
											<button class="selectr-input-clear" type="button"></button>
										</div>
										<div class="selectr-notice"></div>
										<ul class="selectr-options" role="tree" aria-hidden="true" aria-expanded="false"></ul>
									</div>
									<div class="selectr-container selectr-desktop multiple inverted" style="width: 100%;">
										<select id="multiSelect" multiple="" tabindex="" class="selectr-hidden multiSelectr" aria-hidden="true">
											<option value="">Richard Roe</option>
											<option value="">Jane Smith</option>
										</select>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Tag</div>
						<div class="col-lg-4">
							<div class="row">
								<div class="selectr-container selectr-desktop multiple" style="width: 100%;">
									<div class="selectr-options-container">
										<div class="selectr-input-container">
											<input class="selectr-input" tagindex="-1" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="true" role="textbox" type="search">
											<button class="selectr-input-clear" type="button"></button>
										</div>
										<div class="selectr-notice"></div>
										<ul class="selectr-options" role="tree" aria-hidden="true" aria-expanded="false"></ul>
									</div>
									<div class="selectr-container selectr-desktop multiple inverted" style="width: 100%;">
										<select id="multiSelect" multiple="" tabindex="" class="selectr-hidden multiSelectr" aria-hidden="true">
											<option value="">IT</option>
											<option value="">Support</option>
											<option value="">Finance</option>
											<option value="">HR</option>
											<option value="">Network</option>
										</select>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Type</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Application Release - QA</option>
								<option value="1">Application Release - UAT</option>
								<option value="1">Application Release - Production</option>
								<option value="1">Support Infra</option>
								<option value="2">Enquiries</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Priority</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Low</option>
								<option value="1">Medium</option>
								<option value="1">High</option>
								<option value="1">Critical</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Status</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Open</option>
								<option value="1">In Process</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">DueDate</div>
						<div class="col-lg-4">
							<input class="form-control" type="text" name="foo">
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Topic</div>
						<div class="col-lg-4">
							<input type="text" class="form-control" id="ticketTopic" placeholder="Enter ticket topic">
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Subject</div>
						<div class="col-lg-4">
							<input type="text" class="form-control" id="ticketSubject" placeholder="Enter ticket subject">
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2">Message</div>
						<div class="col-lg-4">
							<textarea class="form-control" placeholder="Enter ticket details" rows="5" id=""></textarea>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2">
						<div class="col-lg-2" style="align-content: center;">Attachment</div>
						<div class="col-lg-4">
							<input type="file" class="dropify" id="ticketAttachment" name="ticketAttachment" data-allowed-file-extensions="png jpg jpeg svg bmp" data-height="100" autocomplete="off">
						</div>
						<div class="col-lg-6"></div>
					</div>

					<div class="form-group row mt-2">
						<label class="col-xl-2">Is Strategy</label>
						<div id="radio-group" class="col-xl-10 mt-2 radio-group" data-group="">
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="mappedOptions" id="ipYes" value="Yes">
								<label class="form-check-label" for="ipYes">Yes</label>
							</div>
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" name="mappedOptions" id="ipNo" value="No">
								<label class="form-check-label" for="ipNo">No</label>
							</div>
						</div>
					</div>
					<div class="row col-lg-12 mt-2" id="divWorkFlowRule" style="display: none;">
						<div class="col-lg-2">Select Strategy</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Strategy_Finance</option>
								<option value="2">Strategy_Network</option>
								<option value="3">Strategy_Internal</option>
								<option value="4">Strategy_HR</option>
								<option value="5">Strategy_Inventory</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
					<div class="row col-lg-12 mt-2" id="divProcess" style="display: none;">
						<div class="col-lg-2">Select Ticket Procedure</div>
						<div class="col-lg-4">
							<select id="" class="form-select" aria-label="Default select example">
								<option value="0" selected="selected">--</option>
								<option value="1">Pr_Finance</option>
								<option value="2">Pr_Admin</option>
								<option value="3">Pr_HR</option>
								<option value="4">Pr_Network</option>
								<option value="5">Pr_Recruitment</option>
							</select>
						</div>
						<div class="col-lg-6"></div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row text-end ">
					<div class="col-lg-12 ">
						<button id="submitBtn" class="btn btn-de-primary"><i class="mdi mdi-check-all me-2"></i>Create</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/matrica/assets/libs/vanillajs-datepicker/js/datepicker-full.min.js"></script>
	<script src="~/matrica/assets/js/moment.js"></script>
	<script src="~/matrica/assets/libs/mobius1-selectr/selectr.min.js"></script>
	<script src="~/matrica/assets/js/pages/forms-advanced.js"></script>
	<script src="~/matrica/assets/libs/dropify/js/dropify.js"></script>

	<script type="text/javascript">
		$(document).ready(function() {
		  $("input[id$='ipYes']").click(function() {
			 $("#divWorkFlowRule").css("display", "flex");
			 $("#divProcess").css("display", "none");
		  });
		 $("input[id$='ipNo']").click(function() {
			 $("#divProcess").css("display", "flex");
			 $("#divWorkFlowRule").css("display", "none");
		  });
		  });

			  $(".dropify").attr("data-default-file", window.location.origin + "/matrica/assets/images/logo-sm.png");
		$('.dropify').dropify();

		  const dropifyMessages = {
			default: "Choose a file",
			replace: "Drop a file or click to replace",
			remove: "Remove",
			error: "Some error occurred.",
		};
	</script>

}